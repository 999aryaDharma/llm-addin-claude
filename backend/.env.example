# ============================================================================
# Office LLM Add-in - Environment Variables Template
# ============================================================================
#
# CARA PENGGUNAAN:
# 1. Copy file ini menjadi .env
#    Windows: copy .env.example .env
#    Linux/Mac: cp .env.example .env
# 2. Isi semua nilai yang diperlukan
# 3. JANGAN commit file .env ke git (sudah ada di .gitignore)
#
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================

# API Environment (development/production)
API_ENV=development

# API Host & Port
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://localhost:3000

# ============================================================================
# Google Gemini API (WAJIB!)
# ============================================================================

# Google API Key - Dapatkan dari: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# LLM Model
LLM_MODEL=gemini-1.5-flash

# LLM Parameters
TEMPERATURE=0.7
MAX_TOKENS=2048

# ============================================================================
# ChromaDB Configuration
# ============================================================================

CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=office_documents

# Embedding Model (Google)
EMBEDDING_MODEL=models/embedding-001

# ============================================================================
# HuggingFace (Optional - jika menggunakan embedding alternatif)
# ============================================================================

# HuggingFace API Key (opsional)
# HUGGINGFACE_API_KEY=hf_your_token

# Alternative Embedding Model (jika tidak pakai Google)
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================================================
# Storage Paths
# ============================================================================

DATA_PATH=data
CHROMA_PERSIST_DIR=data/chroma
UPLOAD_DIR=data/uploads
CACHE_DB_PATH=data/cache/summaries.db
LOG_PATH=data/logs

# ============================================================================
# Document Processing
# ============================================================================

CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_UPLOAD_SIZE=10
SUMMARY_BATCH_SIZE=10

# Allowed file extensions
ALLOWED_EXTENSIONS=.txt,.docx,.pdf,.xlsx

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO

# ============================================================================
# Cache Settings
# ============================================================================

CACHE_TTL=3600
CACHE_ENABLED=true

# ============================================================================
# Security
# ============================================================================

# Secret key untuk sessions (generate random string)
SECRET_KEY=your-secret-key-change-in-production

# Encryption key (generate random string)
ENCRYPTION_KEY=your-encryption-key-change-in-production

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_WORD_FEATURES=true
ENABLE_EXCEL_FEATURES=true
ENABLE_RAG=true
ENABLE_SUMMARIZATION=true

# ============================================================================
# Development Settings
# ============================================================================

DEBUG=false
AUTO_RELOAD=true

# ============================================================================
# NOTES
# ============================================================================
#
# PENTING:
# 1. WAJIB isi GOOGLE_API_KEY
# 2. JANGAN commit file .env ke git
# 3. Untuk production, ganti semua "your-xxx-here" dengan nilai sebenarnya
# 4. Generate SECRET_KEY dan ENCRYPTION_KEY dengan:
#    python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# ============================================================================

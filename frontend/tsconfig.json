{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/taskpane/Shared/*"],
      "@word/*": ["src/taskpane/Word/*"],
      "@excel/*": ["src/taskpane/Excel/*"],
      "@hooks/*": ["src/taskpane/hooks/*"],
      "@services/*": ["src/taskpane/services/*"],
      "@store/*": ["src/taskpane/store/*"]
    },
    "types": ["@types/office-js", "@types/react", "@types/react-dom", "node"]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}
